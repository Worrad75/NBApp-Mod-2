<div class="container text-center">
<h1>Create a forum about a player!</h1>

    <% if flash[:messages] %>
        <% flash[:messages].each do |m| %>
            <%=m%>
        <% end %>
    <% end %>




    <%= form_for @forum do |f| %>
        Player: <br>
        <%= f.collection_select :player_id, @players, :id, :full_name %>
        <br>
        <br>
        Title: <br>
        <%= f.text_field :title %>
        <br>
        <br>
        Description: <br>
        <%= f.text_area :description %>
        <br>
        <br>
        <br>
        <%= f.submit "Create Forum" %>
        
    <% end %>
</div>