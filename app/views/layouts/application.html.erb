<!DOCTYPE html>
<html>
  <head>
    <title>RyanDarrowMod2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body background="background.jpg">
    <% if logged_in? %>
      <h5>Logged In As: <%= link_to current_user.username, user_path(current_user.id) %></h5>
      <%= button_to "Logout", session_path(current_user.id), method: :delete %>
    <% else %>
      <%= button_to "Login", new_session_path, method: :get %>
    <% end %>
    <br>
    <%= button_to "Players", players_path, method: :get %>
    <%= button_to "Teams", teams_path, method: :get %>
    <%= button_to "Games", games_path, method: :get %>
    

    <%= yield %>
  </body>
</html>
