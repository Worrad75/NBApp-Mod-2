<div class="container text-center">
    <h1><%= "Welcome back, " + @user.username + "!" %></h1>


    Username: <%= @user.username %>

    <br> <br>

    <%# byebug%>

    <% unless @user.players == nil %>
        All My Follows:
            <% @user.players. each do |player| %>
            <br>
                <%= link_to player.full_name, player_path(player.id) %>
            <% end %>
    <% end %>

    <br><br>

    Delete this user:
    <%= button_to "Delete User", user_path(@user), method: :delete %>
    
</div>